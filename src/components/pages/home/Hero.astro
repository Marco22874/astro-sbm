---
// import images
import { Image } from "astro:assets";
import HeroImg from "../../../assets/images/slide@1920.webp";
---

<section
    id="hero"
    class="-z-100 relative flex-1 mt-[120px] px-8 md:px-12 lg:px-47 w-screen"
>
    <Image
        src={HeroImg}
        alt="Hero sbm"
        format="avif"
        quality={"mid"}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${HeroImg.width}px`}
    />
    <h1
        class="absolute top-5 md:top-10 lg:top-18 xl:top-36 left-13 md:left-22 lg:left-42 xl:left-56 text-purple text-4xl md:text-8xl xl:text-[220px] tracking-tight leading-7 md:leading-19 xl:leading-42 border border-red-300"
    >
        <span class="block">&nbsp;your</span>
        <span class="block">&nbsp;&nbsp;&nbsp;&nbsp;health</span>
        <span class="block">partner</span>
    </h1>
</section>
