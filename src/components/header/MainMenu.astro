---
// import language files
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations } from "../../i18n/utils.ts";
import { languages } from "../../i18n/ui.ts";

const currentLang = Astro.currentLocale || "it";
const tr = useTranslations(currentLang as keyof typeof languages);
---

<nav class="hidden lg:w-[600px] lg:flex items-center h-[60px] text-xl">
  <ul class="md:flex md:flex-1 justify-around">
    <li>
      <a href={getRelativeLocaleUrl(currentLang, "/products")}
        >{tr("nav.products")}</a
      >
    </li>
    <li>
      <a href={getRelativeLocaleUrl(currentLang, "/services")}
        >{tr("nav.services")}</a
      >
    </li>
    <li>
      <a href={getRelativeLocaleUrl(currentLang, "/news")}>{tr("nav.news")}</a>
    </li>
    <li>
      <a href={getRelativeLocaleUrl(currentLang, "/about-us")}
        >{tr("nav.about-us")}</a
      >
    </li>
  </ul>
</nav>
