---
// import components
import TopHeader from "../components/header/TopHeader.astro";
import Header from "../components/header/Header.astro";
import Footer from "../components/footer/Footer.astro";
// import tailwind styles
import "../styles/global.css";
// import transitions
import { ClientRouter } from "astro:transitions";

const currentLang = Astro.currentLocale || "it";
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=5, user-scalable=0"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="google" content="notranslate" />
    <meta name="keywords" content="SBM srl, Lecce, your health partner" />
    <meta name="description" content="SBM srl, Lecce, your health partner" />
    <meta name="author" content="Next Code di Marco De Luca" />
    <meta property="og:title" content="SBM - Your Health Partner" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://www.sbmsrl.it" />
    <meta property="og:image" content="http://www.sbmsrl.it/img/logo.png" />
    <meta property="og:locale" content="it_IT" />
    <meta
      property="og:description"
      content="SBM srl, Lecce, your health partner"
    />
    <title>{Astro.props.title}</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
    <ClientRouter />
  </head>
  <body class="m-0 w-full h-dvh font-Acumin">
    <div
      id="container"
      class="flex flex-col items-center border-0 min-h-screen overflow-x-hidden"
    >
      <TopHeader />
      <Header />
      <slot />
      <Footer />
    </div>
  </body><script>
    import { gsap } from "gsap";
    console.log("using GSAP: ", gsap.version);
  </script>
</html>
